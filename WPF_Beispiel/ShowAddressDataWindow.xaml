<Window x:Class="WPF_Beispiel.ShowAddressDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Beispiel"
        mc:Ignorable="d"
        Title="ShowAddressDataWindow" Height="350" Width="400" Background="Gray">
    <Canvas>
        <Label FontSize="7" Canvas.Left="10" Canvas.Top="1">Folgende Daten wurden eingegeben</Label>
        <Button Canvas.Left="330" Canvas.Top="1" Height="20" Width="50" Click="Exit_Click">Exit</Button>
        <TextBlock x:Name="AddressTextBlock" Canvas.Left="10" Canvas.Top="30" Height="260" Width="360" Background="White"/>
    </Canvas>
</Window>
